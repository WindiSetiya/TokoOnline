@model Produk
@{
    ViewData["Title"] = "Home Page";
}

<body background="https://i.pinimg.com/originals/72/6c/ce/726ccedea1e3e4a5f53274b153150103.png"></body>

<h1>Rincian Produk</h1>

<table class="table">
    <tr>
        <td>Nama produk:</td>
        <td>@Html.DisplayFor(modelItem => Model.Nama)</td>
    </tr>
    <tr>
        <td>Ukuran:</td>
        <td>@Html.DisplayFor(modelItem => Model.Ukuran)</td>
    </tr>
    <tr>
        <td>Harga:</td>
        <td>@Html.DisplayFor(modelItem => Model.Harga)</td>
    </tr>
    <tr>
        <td><a asp-controller="TokoOnline" asp-action="MetodePembayaran" asp-route-id="@Model.ID">Beli Produk</a> </td>
    </tr>
</table>