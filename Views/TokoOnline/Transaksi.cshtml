@model MvcTokoOnline.Models.Transaksi

@{
    ViewData["Title"] = "Create";
}

<body background="https://i.pinimg.com/originals/72/6c/ce/726ccedea1e3e4a5f53274b153150103.png"></body>

<h6>Tambahkan Tanggal Pembayaran</h6>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Transaksi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="TanggalPembayaran" class="form-control" />
                <span asp-validation-for="TanggalPembayaran" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Konfirmasi" class="btn btn-primary" asp-controller="TokoOnline" asp-action="TransaksiDetail"/>
            </div>
        </form>
    </div>
</div>

