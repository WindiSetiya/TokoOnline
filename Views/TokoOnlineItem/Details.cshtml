@model Produk
@{
    ViewData["Title"] = "Detail Produk";
}

<h1>Rincian Produk</h1>

<table class="table">
    <tr>
        <td>Nama produk:</td>
        <td>@Html.DisplayFor(modelItem => Model.Nama)</td>
    </tr>
    <tr>
        <td>Ukuran:</td>
        <td>@Html.DisplayFor(modelItem => Model.Ukuran)</td>
    </tr>
    <tr>
        <td>Harga:</td>
        <td>@Html.DisplayFor(modelItem => Model.Harga)</td>
    </tr>
    <tr>
        <td><a asp-controller="TransaksiToko" asp-action="Transaksi">Beli Produk</a></td>
    </tr>
</table>